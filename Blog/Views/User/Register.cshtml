@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<section id="register">
    <form asp-action="Register" method="post">
        <div>
            <input asp-for="@Model.UserName" autocomplete="username" placeholder="Username" aria-required="true" />
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        </div>
        <div>
            <input asp-for="@Model.Email" autocomplete="email" placeholder="Email" aria-required="true" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div>
            <input asp-for="@Model.Password" autocomplete="password" placeholder="Password" aria-required="true" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
        <button type="submit">Register</button>
    </form>
    <hr />
    <img src="~/images/register-side.png"/>
</section>
